BoxLayout:
    orientation: 'vertical'
    Label:
        text: 'Enter your mark'
        size_hint_y: 0.1
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            Button:
                text: 'Clear'
                on_press: app.clear()
            Button:
                text: 'Check'
                on_press : app.handle_check()
        BoxLayout:
            orientation: 'vertical'
            TextInput:
                id: input_mark
                text: ''
            Label:
                id: output_label
                text: 'Your grade will appear'
                color: (1, 1, 0, 1)
